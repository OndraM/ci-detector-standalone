{
    "name": "ondram/ci-detector-standalone",
    "description": "Standalone CLI command to detect continuous integration server and provide unified access to properties of current build",
    "keywords": [
        "continuous integration",
        "adapter",
        "interface",
        "command",
        "appveyor",
        "bamboo",
        "circleci",
        "codeship",
        "continuousphp",
        "drone",
        "gitlab",
        "jenkins",
        "teamcity",
        "travis"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ond≈ôej Machulda",
            "email": "ondrej.machulda@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "OndraM\\CiDetector\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OndraM\\CiDetector\\Tests\\": "tests/"
        }
    },
    "require": {
        "php" : "^7.1",
        "ext-mbstring" : "*",
        "ondram/ci-detector": "3.1.x",
        "symfony/console": "^4.0 || ^5.0",
        "zendframework/zend-filter": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^8.0 || 9.0",
        "php-coveralls/php-coveralls": "^2.2",
        "phpstan/phpstan": "^0.9.2",
        "lmc/coding-standard": "^1.3 || ^2.0"
    },
    "bin": ["bin/ci-detector"],
    "scripts": {
        "build": [
            "composer update --no-dev",
            "phar-composer.phar build . ci-detector.phar"
        ]
    }
}
