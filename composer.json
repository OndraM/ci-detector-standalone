{
    "name": "ondram/ci-detector-standalone",
    "type": "library",
    "description": "Standalone CLI command to detect continuous integration server and provide unified access to properties of current build",
    "keywords": [
        "continuous integration",
        "command"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ond≈ôej Machulda",
            "email": "ondrej.machulda@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "laminas/laminas-filter": "^2.7",
        "ondram/ci-detector": "=3.4.0",
        "symfony/console": "^4.0 || ^5.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.2",
        "lmc/coding-standard": "^1.3 || ^2.0",
        "php-coveralls/php-coveralls": "^2.2",
        "php-parallel-lint/php-parallel-lint": "^1.1",
        "phpstan/extension-installer": "^1.0.3",
        "phpstan/phpstan": "^0.12.0",
        "phpstan/phpstan-phpunit": "^0.12.1",
        "phpunit/phpunit": "^7.5 || ^8.0 || ^9.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OndraM\\CiDetector\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OndraM\\CiDetector\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/ci-detector"
    ],
    "scripts": {
        "all": [
            "@lint",
            "@analyze",
            "./vendor/bin/phpunit --colors=always"
        ],
        "analyze": [
            "./vendor/bin/ecs check ./src/ ./tests/ --ansi",
            "./vendor/bin/phpstan analyze -c phpstan.neon --ansi"
        ],
        "build": [
            "composer update --no-dev",
            "phar-composer.phar build . ci-detector.phar"
        ],
        "lint": [
            "vendor/bin/parallel-lint -j 10 ./src ./tests",
            "@composer validate",
            "@composer normalize --dry-run"
        ]
    }
}
